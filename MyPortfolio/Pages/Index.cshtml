    .glass {
        background: rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 2rem;
        transition: box-shadow 0.3s ease;
    }

        .glass:hover {
            box-shadow: 0 12px 40px rgba(31, 38, 135, 0.3);
        }

    .section-title {
        position: relative;
        display: inline-block;
        padding-bottom: 8px;
        margin-bottom: 40px;
        font-size: 2.4rem;
        font-weight: 800;
        color: #b22222;
        letter-spacing: 1px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 0;
            width: 70px;
            height: 5px;
            background: #dc3545;
            border-radius: 5px;
            box-shadow: 0 0 10px #dc3545aa;
        }

    .skill-box {
        background: white;
        border-radius: 16px;
        padding: 1.5rem 2rem;
        min-width: 130px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        cursor: default;
    }

        .skill-box:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 12px 25px rgba(220, 53, 69, 0.4);
        }

        .skill-box i,
        .skill-box img {
            transition: transform 0.3s ease;
        }

        .skill-box:hover i,
        .skill-box:hover img {
            transform: scale(1.3) rotate(10deg);
            filter: drop-shadow(0 0 4px #dc3545);
        }

    .edu-card {
        background-color: #fff;
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.08);
        cursor: default;
    }

        .edu-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 24px rgba(220, 53, 69, 0.25);
        }

    .timeline-content {
        transition: all 0.3s ease-in-out;
        border-radius: 20px;
        background: #fff;
        box-shadow: 0 3px 10px rgb(0 0 0 / 0.06);
        cursor: default;
    }

        .timeline-content:hover {
            box-shadow: 0 10px 24px rgba(220, 53, 69, 0.2);
            transform: translateY(-6px);
        }

    .btn-gradient {
        background: linear-gradient(45deg, #dc3545, #ff6f61);
        color: white !important;
        border: none;
        border-radius: 12px;
        padding: 0.85rem 1.8rem;
        font-weight: 600;
        box-shadow: 0 6px 15px rgba(220, 53, 69, 0.4);
        transition: background 0.4s ease, box-shadow 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #ff6f61, #dc3545);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.7);
            text-decoration: none;
        }

  
    .d-flex a:hover i {
        transform: scale(1.3);
        transition: transform 0.3s ease;
        filter: drop-shadow(0 0 6px #dc3545);
    }

  
    #topBtn {
        display: none;
        width: 50px;
        height: 50px;
        background: #dc3545;
        color: white;
        border-radius: 50%;
        border: none;
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.5);
        cursor: pointer;
